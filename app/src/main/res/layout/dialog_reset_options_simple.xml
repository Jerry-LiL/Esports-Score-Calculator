<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/dark_background"
    android:padding="24dp">

    <!-- Title -->
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reset_tournament_data"
        android:textColor="@color/neon_blue"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/choose_reset_data"
        android:textSize="14sp"
        android:textColor="@color/text_secondary"
        android:gravity="center"
        android:layout_marginBottom="16dp"/>

    <!-- Option 1: Reset Current Day -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardResetCurrentDay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/dark_surface_variant"
        app:cardElevation="4dp"
        app:cardCornerRadius="12dp"
        android:layout_marginBottom="12dp"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/reset_current_day_title"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:drawableStart="@android:drawable/ic_menu_day"
                android:drawableTint="@color/neon_blue"
                android:drawablePadding="12dp"
                android:gravity="center_vertical" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/reset_current_day_description"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Option 2: Reset Day Range -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardResetDayRange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/dark_surface_variant"
        app:cardElevation="4dp"
        app:cardCornerRadius="12dp"
        android:layout_marginBottom="12dp"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/reset_day_range_title"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:drawableStart="@android:drawable/ic_menu_my_calendar"
                android:drawableTint="@color/neon_blue"
                android:drawablePadding="12dp"
                android:gravity="center_vertical" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/reset_day_range_description"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Option 3: Reset All Tournament Data -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardResetAllData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#1A1A1A"
        app:cardElevation="4dp"
        app:cardCornerRadius="12dp"
        android:layout_marginBottom="12dp"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/reset_all_title"
                android:textColor="#FF5555"
                android:textSize="18sp"
                android:textStyle="bold"
                android:drawableStart="@android:drawable/ic_menu_delete"
                android:drawableTint="#FF5252"
                android:drawablePadding="12dp"
                android:gravity="center_vertical" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/reset_all_description"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Cancel Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/cancel"
        android:textColor="@color/text_secondary"
        app:backgroundTint="@color/dark_surface_variant"
        app:cornerRadius="8dp"
        android:layout_marginTop="12dp" />

</LinearLayout>
