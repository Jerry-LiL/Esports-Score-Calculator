<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="24dp"
    app:cardBackgroundColor="@color/dark_background"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Progress Indicator -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/tvProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rank_of"
                android:textColor="@color/text_secondary"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- Title -->
        <TextView
            android:id="@+id/tvRankTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rank_number"
            android:textColor="@color/neon_blue"
            android:textSize="32sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Team Slot Number Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/team_slot_hint"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            app:boxStrokeColor="@color/neon_blue"
            app:hintTextColor="@color/text_primary"
            app:startIconDrawable="@android:drawable/ic_menu_sort_by_size"
            app:startIconTint="@color/neon_blue"
            android:layout_marginBottom="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etTeamSlot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textColor="@color/text_primary"
                android:textSize="20sp"
                android:padding="16dp"
                android:maxLength="2" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Kills Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/kills_hint"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            app:boxStrokeColor="@color/neon_blue"
            app:hintTextColor="@color/text_primary"
            app:startIconDrawable="@android:drawable/ic_menu_info_details"
            app:startIconTint="@color/neon_blue"
            android:layout_marginBottom="24dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etKills"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textColor="@color/text_primary"
                android:textSize="20sp"
                android:padding="16dp"
                android:maxLength="3" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPrevious"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:text="@string/previous"
                android:textSize="16sp"
                style="@style/Widget.Material3.Button.OutlinedButton"
                app:strokeColor="@color/neon_blue"
                android:textColor="@color/neon_blue"
                app:icon="@android:drawable/ic_media_previous"
                app:iconGravity="start"
                android:layout_marginEnd="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnNext"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:text="@string/next"
                android:textSize="16sp"
                android:backgroundTint="@color/neon_blue"
                android:textColor="@color/dark_background"
                style="@style/Widget.Material3.Button"
                app:icon="@android:drawable/ic_media_next"
                app:iconGravity="end"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- Cancel Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancelEntry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cancel_entry"
            android:textColor="@color/text_secondary"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_marginTop="8dp" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
